@model IEnumerable<Colaboradores_MVC.Models.Colaboradores>

@{
    ViewBag.Title = "Index";
    Layout = "~/Views/Shared/_Layout.cshtml";
}


<section class="wrapper">
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel">
                <h4><i class="fa fa-angle-right"></i> Colaboradores</h4><hr><table class="table table-striped table-advance table-hover">

                    <div class="col-lg-8">
                        <p>
                            <button title="Novo" class="btn btn-success btn-sm" onclick="location.href='@Url.Action("Create")'"><i class="fa fa-plus"></i></button>
                        </p>
                    </div>

                    <table class="table">
                        <tr>
                            <th>
                                @Html.DisplayNameFor(model => model.Nome)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Apelido)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Email)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.BI)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.NIF)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Morada)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Concelho)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Distrito)
                            </th>
                            <th>
                                @Html.DisplayNameFor(model => model.Departamento)
                            </th>
                            <th></th>
                        </tr>

                        @foreach (var item in Model)
                        {
                            <tr>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Nome)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Apelido)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Email)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.BI)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.NIF)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Morada)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Concelho)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Distrito)
                                </td>
                                <td>
                                    @Html.DisplayFor(modelItem => item.Departamento)
                                </td>
                                <td>
                                    <button title="Detalhes" class="btn btn-success btn-xs" onclick="location.href='@Url.Action("Details", new { id = item.Id_Colab })'"><i class="fa fa-check"></i></button>
                                    <button title="Editar" class="btn btn-primary btn-xs" onclick="location.href='@Url.Action("Edit", new { id = item.Id_Colab })'"><i class="fa fa-pencil"></i></button>
                                    <button title="Apagar" class="btn btn-danger btn-xs" onclick="location.href='@Url.Action("Delete", new { id = item.Id_Colab })'"><i class="fa fa-trash-o"></i></button>
                                </td>
                            </tr>
                        }

                    </table>

            </div>
        </div>
</section>


