@model Colaboradores_MVC.Models.Departamento

@{
    ViewBag.Title = "Details";
    Layout = "~/Views/Shared/_Layout.cshtml";
}

<section class="wrapper">
    <div class="row mt">
        <div class="col-md-12">
            <div class="content-panel" style="padding:15px">

                <div>
                    <h4>Departamento</h4>
                    <hr />
                    <dl class="dl-horizontal">
                        <dt>
                            @Html.DisplayNameFor(model => model.Nome)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Nome)
                        </dd>

                        <dt>
                            @Html.DisplayNameFor(model => model.Descricao)
                        </dt>

                        <dd>
                            @Html.DisplayFor(model => model.Descricao)
                        </dd>

                        <hr />
                        <dd>
                            <div class="col-lg-12">
                                <p>
                                    <button title="Editar" class="btn btn-primary" onclick="location.href='@Url.Action("Edit", new { id = Model.Id_Depart })'"><i class="fa fa-pencil"></i></button>
                                    @Html.ActionLink("Voltar", "Index", null, new { @class = "btn btn-danger" })
                                </p>
                                
                            </div>

                           
                        </dd>

                    </dl>
                </div>
               
            </div>
        </div>
    </div>
</section>