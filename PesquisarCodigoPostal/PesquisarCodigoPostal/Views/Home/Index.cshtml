@model List<CodigoPostal>

@{
    ViewData["Title"] = "Pesquisar";
}



<head>

    <style>
        section {
            padding-top: 3%;
            width: 800px;
            margin: auto;
            text-align: center;
        }

        table, h2{
            margin-top: 8%;
        }
    </style>
</head>
<body>
    <section class="intro">

        <form asp-action="Index" method="post">
            <div class="card">
                <h2>Pesquisa</h2>
                <div class="card-body p-4">
                    <div class="row">
                        <div class="col-12 mb-4">
                            <div class="input-group">
                                <div class="form-outline flex-fill">
                                    <input type="search" id="form1" name="query" class="form-control form-control-lg" placeholder="Insira sua pesquisa" />
                                </div>
                                <button type="submit" class="btn btn-primary">
                                    <i class="fa fa-search"></i>
                                </button>
                            </div>
                            <div>
                                <h6>@ViewBag.Message</h6>
                            </div>
                            <div></div>
                            <div>
                                
                                    @if (Model != null)
                                    {
                                        if (Model.Count == 0)
                                        {
                                            <div>@ViewBag.Message</div>
                                        }
                                        else
                                        {
                                            <table class="table table-striped">
                                                <tbody>
                                                    @foreach (var item in Model)
                                                    {



                                                        <tr>
                                                            <th>
                                                                <a href="https://www.google.pt/maps/place/@item.CodigoPostalString">@item.CodigoPostalString</a>
                                                            </th>
                                                        </tr>




                                                    }
                                                </tbody>
                                              </table>
                                        }

                                    }
                                
                            </div>
                            
                        </div>
                    </div>
                </div>
            </div>
        </form>

    </section>

    

</body>

